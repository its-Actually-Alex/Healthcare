<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.Healthcare.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.Healthcare"
    xmlns:view="clr-namespace:Maui.Healthcare.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui.Healthcare">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="PatientDetail"
        ContentTemplate="{DataTemplate view:PatientView}"
        Route="Patient" />
    <ShellContent
        Title="PhysicianDetail"
        ContentTemplate="{DataTemplate view:PhysicianView}"
        Route="Physician" />

</Shell>
